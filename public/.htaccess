<IfModule mod_rewrite.c>
  RewriteEngine On
  # Root deployment on Hostinger
  RewriteBase /

  # Serve existing files/directories directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise route everything to index.html (absolute path)
  RewriteRule . /index.html [L]
</IfModule>

# Prevent MultiViews from interfering with SPA routes (optional)
Options -MultiViews

# Extra safety for SPA routes on Apache 2.4+
<IfModule mod_dir.c>
  FallbackResource /index.html
  DirectoryIndex index.html
</IfModule>

# If rewrite module is disabled, still try to serve index.html for 404s
ErrorDocument 404 /index.html
